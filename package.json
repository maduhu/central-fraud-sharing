{
  "name": "central-fraud-sharing",
  "version": "1.2.0",
  "description": "A series of services designed to offer the participants an avenue to share end user and transactional information to help promote overall health of the scheme via fraud prevention.",
  "license": "SEE LICENSE IN LICENSE",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:LevelOneProject/central-fraud-sharing.git"
  },
  "config": {
    "knex": "--knexfile ./config/knexfile.js"
  },
  "standard": {
    "ignore": [
      "**/migrations/**"
    ]
  },
  "scripts": {
    "start": "node src/server.js",
    "test": "npm run test:unit | faucet",
    "test:xunit": "tape 'test/unit/**/*.test.js' | tap-xunit",
    "test:coverage": "istanbul cover tapes -- 'test/unit/**/*.test.js'",
    "test:coverage-check": "npm run test:coverage && istanbul check-coverage",
    "test:circle": "./test/functional-runner.sh docker-compose.yml docker-compose.circle.yml .env",
    "pretest": "standard",
    "test:unit": "tapes 'test/unit/**/*.test.js'"
  },
  "dependencies": {
    "@leveloneproject/central-services-auth": "0.2.0",
    "@leveloneproject/central-services-database": "0.2.1",
    "@leveloneproject/central-services-shared": "0.3.0",
    "@leveloneproject/central-services-error-handling": "0.3.0",
    "blipp": "2.3.0",
    "hapi": "16.1.1",
    "hapi-swagger": "7.7.0",
    "glob": "7.1.1",
    "good-console": "6.4.0",
    "good": "7.1.0",
    "good-squeeze": "5.0.2",
    "inert": "4.2.0",
    "joi": "10.4.1",
    "glue": "4.1.0",
    "rc": "1.2.1",
    "vision": "4.1.1"
  },
  "optionalDependencies": {
    "pg": "6.1.5"
  },
  "devDependencies": {
    "faucet": "0.0.1",
    "istanbul": "0.4.5",
    "pre-commit": "1.1.3",
    "proxyquire": "^1.7.11",
    "sinon": "1.17.6",
    "standard": "8.5.0",
    "tap-xunit": "1.4.0",
    "tape": "4.6.2",
    "tapes": "4.1.0"
  }
}
